<Window x:Class="Nice.Dotnet.Wpf.Views.ChartsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nice.Dotnet.Wpf.Views"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:vm="clr-namespace:Nice.Dotnet.Wpf.ViewModels"
        mc:Ignorable="d"
        Closing="Window_Closing"
        d:DataContext="{d:DesignInstance Type=vm:ChartsViewModel}"
        
        Title="ChartsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="导出图表到图片"  Click="SaveBtn_Click"/>
            <Button Content="导入Excel数据" Margin="20,0,0,0" Width="121" Command="{Binding ReadExcelCommand}"/>

        </StackPanel>
        <lvc:CartesianChart x:Name="LineChart" ZoomMode="X" Grid.Row="1"
            Series="{Binding SeriesCollection}"
                            XAxes="{Binding XAxes}"
           >
        </lvc:CartesianChart>
    </Grid>
    
</Window>
